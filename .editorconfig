##
# See: https://editorconfig.org
##

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Note: if this changes, update the pre-commit config!
[{*.js,*.json, *.json5}]
indent_size = 4

[{*.yml, *.yaml}]
indent_style = space
indent_size = 4

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

[*.md]
# double whitespace at end of line
# denotes a line break in Markdown
trim_trailing_whitespace = false

[*.toml]
indent_style = space
indent_size = 4
